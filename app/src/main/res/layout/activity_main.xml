<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#FDBEB9"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Madam, \nI Want to Ask Few Qurtion !! Can You Please Anser My Those Questions?"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textColor="#F44336"
                    android:textSize="22sp"
                    android:textDirection="firstStrong"
                    android:padding="10dp"
                    android:gravity="start" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hint : Press The Next Button Below To View The Questions"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textFontWeight="@android:integer/config_longAnimTime"
                    android:padding="10dp"
                    android:gravity="start" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue To Next"
                    android:layout_margin="15sp"
                    android:background="#03A9F4"
                    app:backgroundTint="@null"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>